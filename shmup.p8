function ship_draw()
 spr(ship.sprite, ship.x, ship.y)
 --draw jet
 spr(jet.sprite, jet.x, jet.y)
end

function ship_move()
		if btn(0) then
    ship.x -= 2
    ship.sprite = 1
  elseif btn(1) then
    ship.x += 2
    ship.sprite = 3
  else
  	ship.sprite=2
  end
 ---
  if btn(2) then
    ship.y -= 2
  elseif btn(3) then
    ship.y += 1
  end
  
end

function anim_jet()
	jet.x = ship.x
	jet.y = ship.y+9
	--sprite change
	jet.sprite+=1
	if jet.sprite > 20 then
		jet.sprite = 16
	end
end
